{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "server/dist",
    "rootDir": ".",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

     "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "client"]
}
