generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  fullName String
  password String
  tokens RefreshToken[]
  createdAt DateTime @default(now())
}

model RefreshToken {
  id String @id @default(uuid())
  token String
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked Boolean @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

